<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.baseballPlanner.tx.dao.GameDao" table="Game">
        <meta attribute="class-description">
            This class contains the inning detail.
        </meta>
        <id name="id" type="int" column="ID">
            <generator class="native"/>
        </id>
        <property name="datePlayed" column="DATE_PLAYED" type="date"/>
        <set name="innings" inverse="true" lazy="true" table="INNING" fetch="select" cascade="all-delete-orphan" order-by="INNING_NUMBER">
            <key>
                <column name="ID" not-null="true" />
            </key>
            <one-to-many class="com.baseballPlanner.tx.dao.InningDao" />
        </set>
    </class>
</hibernate-mapping>